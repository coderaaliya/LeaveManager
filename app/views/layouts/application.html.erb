  <!DOCTYPE html>
<html>
  <head>
    <title>Shadboxattendance</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <!-- Add this to the head of your HTML file -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
      $(document).ready(function() {
        // Function to toggle the visibility of the manager dropdown
        function toggleManagerDropdown() {
          var role = $('#user_role').val(); // Assuming the role dropdown has the ID 'user_role'

          if (role === 'team_lead') {
            $('#managerDropdownContainer').show();
            $('#teamLeadField').hide();
          } else if (role === 'employee') {
            $('#teamLeadField').show();
            $('#managerDropdownContainer').hide();
          } else {
            $('#managerDropdownContainer').hide();
            $('#teamLeadField').hide();
          }
        }

        // Call the function on page load
        toggleManagerDropdown();

        // Bind the function to the change event of the role dropdown
        $('#user_role').change(toggleManagerDropdown);
      });
    </script>
  </head>

  <body>
    <div class="container-fluid">
      <div class="row">
        <%= render 'shared/sidebar' %>
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-0"style="min-height: 100vh;">
          
          <%= yield %>
        </main>
      </div>
    </div>
  </body>
</html>
